<h3><%= @post.title %> posted from <%= @post.location %></h3>

<section class="row">

	<article class="col-sm-6">
		<div id="map" data-id="<%= @post.id %>"></div>
	</article>

	<article class="col-sm-6">
		<figure>
			<%= image_tag @post.picture.url(:medium), class: "uploaded_pic" %>
		</figure>
	</article>

</section>